.na-banner-wrap {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    -moz-flex-wrap: wrap;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    width: 900px;
    margin: 0 auto;
    padding: 30px 0px;
}

.na-banner-img {
   /* width: 80%;*/
     display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
      -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}
.na-banner-img img.award-img{
  width: 70%;
}
.na-banner-logo {
    width: 20%;
    padding: 20px 0px;
}
.na-banner-logo img {
    width: 100px;
}
.na-banner-content {
    padding: 0 30px;
        width: calc(100% - 130px);
}
.main-class{
    position: relative;
}
.na-banner {
    background: #e8e8e8;
}
.home-content {
    width: 929px;
    margin: 0 auto;
    text-align: justify;
}
.home-pg .home-content {
    padding: 30px 0px;
}

.home-content p {
       font-family: 'Myriad Pro';
    padding: 10px 15px;
    font-size: 16px;
}
@media screen and (max-width: 1024px) {
    .home-content p{
        font-size: 14px;
    }
   .home-pg .home-content {
        padding: 10px 0px;
    }
div#timer {
    padding: 10px 5px;
}
